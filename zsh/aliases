# cd
alias ..='cd ..'

# ls
alias ls="ls -F"
alias l="ls -lAh"
alias ll="ls -l"
alias la='ls -A'

# git
alias g='git'
alias ga='git add'
alias gaa='git add --all .'
alias gm='git merge --no-ff'
alias gmn='git merge --no-ff --no-commit'
alias gmf='git merge --ff-only'
alias gs='git status -b'
alias gl='git pull'
alias glr='git pull --rebase'
alias gr='git remote'
alias gf='git fetch'
alias gp='git push'
alias gd='git diff'
alias gdm='git diff | grep "<<<<<"'
alias gdc='git diff --cached'
alias gc='git commit -v'
alias gca='git commit -v -a'
alias gb='git branch'
alias gba='git branch -a -v'
alias gcount='git shortlog -sn'
alias gcp='git cherry-pick'
alias glg='git log'
alias gg='git log --graph'
alias gco='git checkout'
alias gsv='git svn'
alias gt='git tag'
alias groot='git rev-parse --show-toplevel'
alias ggr='cd $(git rev-parse --show-toplevel)'
alias ggs='git log --format=raw -n 1'

alias git='nocorrect noglob git'

# bundler (ruby)
alias bx='bundle exec'

# rails
alias rc='bundle exec rails c'
alias rs='bundle exec rails s'
alias rg='bundle exec rails g'
alias rdb='bundle exec rails dbconsole'
alias tlog='tail -f log/development.log'

# cucumber
alias c='cucumber'
alias cpw='cucumber -p wip'

alias ec='emacsclient'
alias e=openemacs

# tmux
alias mxw='mux start work'

# vlc
alias vlc=/Applications/VLC.app/Contents/MacOS/VLC

alias c='nocorrect c'
alias h='nocorrect h'

alias man='_() { echo $1; man -M $(brew --prefix)/opt/coreutils/libexec/gnuman $1 1>/dev/null 2>&1;  if [ "$?" -eq 0 ]; then man -M $(brew --prefix)/opt/coreutils/libexec/gnuman $1; else man $1; fi }; _'